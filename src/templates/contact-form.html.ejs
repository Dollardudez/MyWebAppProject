<form method="POST" class="contact-card" action="/contact">

    <label for="email">Email:</label>
    <div>
      <img class="sign-form" src="https://img.icons8.com/fluency-systems-regular/48/000000/new-post.png"/>
      <input type="text" name="email" required="required" placeholder="enter email..."/>
    </div>
    

    <label for="phone">Phone Number:</label>
    <div>
      <img class="sign-form" alt="password lock" src="data:image/svg+xml;base64,"/>
      <input type="number" name="phone" required="required" placeholder="password..."/>  
    </div>

    <label for="message-body">Message:</label>
      <textarea name="message-body" required="required" rows="10" placeholder="start typin'..."></textarea>
    </div>
    
    <button class="btn btn-outline" type="submit">Sign In</button>

  </form>